# ===========================================
# TorrentFlix - Environment Variables
# ===========================================

# App Configuration
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://torrentflix:password@localhost:5432/torrentflix
DB_HOST=localhost
DB_PORT=5432
DB_NAME=torrentflix
DB_USER=torrentflix
DB_PASSWORD=password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# qBittorrent
QBITTORRENT_HOST=http://localhost
QBITTORRENT_PORT=8080
QBITTORRENT_USER=admin
QBITTORRENT_PASS=adminadmin

# Jackett
JACKETT_HOST=http://localhost
JACKETT_PORT=9117
JACKETT_API_KEY=your-jackett-api-key

# Sonarr
SONARR_HOST=http://localhost
SONARR_PORT=8989
SONARR_API_KEY=your-sonarr-api-key

# Radarr
RADARR_HOST=http://localhost
RADARR_PORT=7878
RADARR_API_KEY=your-radarr-api-key

# Media Paths
DOWNLOAD_PATH=/downloads
MEDIA_PATH=/media

# TMDB (The Movie Database) - for movie/series metadata and posters
TMDB_API_KEY=your-tmdb-api-key
